<div class="user-info">
  <h2>User info</h2>
  
  <div>
    <%= image_tag @user.get_profile_image(100, 100) %>
  </div>
  <table>
    <tr>
      <th>name</th>
      <th><%= @user.name%></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @user.introduction%></th>
    </tr>
  </table>
</div>

<div class="books">
  
  <h2>Books</h2>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <% @books.each do |book| %>
  <tr>
    <td><%= image_tag book.user.get_profile_image(80, 80) %></td>
    <td>
      <%= link_to book_path(book.id) do %>
        <%= book.title %>
      <% end %>
    </td>
    <td><%= book.body %></td>
  </tr>
  <% end %>
</table>
  
</div>


