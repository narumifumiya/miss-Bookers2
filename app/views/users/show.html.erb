<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'user', user: @user %>
    
      <%= render 'books/book', book: @book %>
    </div>
  
  
  <div class="col-md-8">
    <h2>Books</h2>
  
  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <% @books.each do |book| %>
    <tr>
      <td><%= image_tag book.user.get_profile_image(80, 80) %></td>
      <td>
        <%= link_to book_path(book.id) do %>
          <%= book.title %>
        <% end %>
      </td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </table>
    
  </div>
  
  </div>
</div>
