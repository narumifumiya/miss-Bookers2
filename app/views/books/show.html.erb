<h2>Book detail</h2>

<table>
  <tr>
    <td><%= image_tag @book.user.get_profile_image(100, 100) %></td>
    <td><%= @book.title %></td>
    <td><%= @book.body %></td>
    <td>
      <% if @book.user == current_user %>
        <%= link_to "Edit", edit_book_path(@book) %>
      <% end %>
    </td>
    <td>
      <% if @book.user == current_user %>
        <%= link_to "Destroy", book_path(@book), method: :delete %>
      <% end %>
    </td>
  </tr>
</table>

<%= @book.user.name %>
