<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      
      <div>
        <%= image_tag @user.get_profile_image(100, 100) %>
      </div>
      <table>
        <tr>
          <th>name</th>
          <th><%= @user.name%></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction%></th>
        </tr>
      </table>
      <div>
        <% if @user == current_user %>
         <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
        <% end %>
      </div>
    
  
  
    <div>
      <h2>New book</h2>
      <%= form_with model: @book do |f| %>
        <div>
          <label>Title</label><br>
          <%= f.text_field :title %>
        </div>
        
        <div>
          <label>Opinion</label><br>
          <%= f.text_area :body %>
        </div>
        <%= f.submit 'Create Book' %>
      <% end %>
    </div>
  </div>
  
  
  <div class="col-md-8">
    <h2>Books</h2>
  
  <table>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <% @books.each do |book| %>
    <tr>
      <td><%= image_tag book.user.get_profile_image(80, 80) %></td>
      <td>
        <%= link_to book_path(book.id) do %>
          <%= book.title %>
        <% end %>
      </td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </table>
    
  </div>
  
  </div>
</div>
