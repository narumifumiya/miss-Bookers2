<h2>User info</h2>
      
<div>
  <%= image_tag user.get_profile_image(100, 100) %>
</div>
<table class="table">
  <tr>
    <th>name</th>
    <th><%= user.name%></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= user.introduction%></th>
  </tr>
</table>

  
 <%= link_to edit_user_path(user) do %>
   <p class="row btn btn-block btn-outline-secondary"><i class="fas fa-user-cog"></i></p>
 <% end %>