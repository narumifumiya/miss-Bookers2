<div class="container">
  
  <% if @book.errors.any? %>
      <%= @book.errors.count%> errors prohibited this obj from being saved:
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      
      <div>
        <%= image_tag @user.get_profile_image(100, 100) %>
      </div>
      <table class="table">
        <tr>
          <th>name</th>
          <th><%= @user.name%></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction%></th>
        </tr>
      </table>
      <div class="row btn btn-block btn-outline-secondary">
        <% if @user == current_user %>
         <%= link_to edit_user_path(@user) do %>
           <i class="fas fa-user-cog"></i>
         <% end %>
        <% end %>
      </div>
      
      <div>
        <h2>New book</h2>
        <%= form_with model: @book do |f| %>
          <div class="form-group">
            <label for="title">Title</label><br>
            <%= f.text_field :title, class: "form-control", id: "title" %>
          </div>
          
          <div class="form-group">
            <label for="opinion">Opinion</label><br>
            <%= f.text_area :body, class: "form-control", id: "opinion" %>
          </div>
          <%= f.submit 'Create Book', class: "btn btn-success" %>
        <% end %>
      </div>
    </div>
    
    <div class="col-md-8">
      <h2>Books</h2>
      
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <% @books.each do |book| %>
        <tr>
          <td><%= image_tag book.user.get_profile_image(80, 80) %></td>
          <td>
            <%= link_to book_path(book.id) do %>
              <%= book.title %>
            <% end %>
          </td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </table>
    </div>
    
  </div>
</div>
