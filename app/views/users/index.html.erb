<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'user', user: @user %>
      
      <%= render 'books/book', book: @book %>
    </div>
  
    <div class="col-md-8">
      <h2>Users</h2>
      
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image(80, 80) %></td>
          <td><%= user.name %></td>
          <td>
            <%= link_to 'Show', user_path(user.id) %>
          </td>
          
        </tr>
        <% end %>
      </table>
    </div>
      
  </div>
</div>