<h1>EditingBook</h1>

<%= form_with model: @book do |f| %>
  <div class="form-box">
    <label for="inputTitle">Title</label>
     <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"名前" %>
  </div>
  <div class="form-box">
    <label for="inputOpinion">Opinion</label>
   <%= f.text_area :body, autofocus: true, id:"Opinion" %>
  </div>
  <%= f.submit "Update Book" %>
    
<% end %>